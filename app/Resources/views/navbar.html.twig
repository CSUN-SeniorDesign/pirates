<div class="c-sidebar__user">
    <a href="{{ path('homepage') }}">
        <i class="fa fa-fw fa-home" aria-hidden="true"></i>
        <span class="sr-only">Homepage</span>
    </a>
    <a href="{{ path('profile') }}">
        <i class="fa fa-fw fa-user" aria-hidden="true"></i>
        <span class="sr-only">User Account</span>
    </a>
    <a href="{{ path('fos_user_security_logout') }}">
        <i class="fa fa-fw fa-sign-out fa-flip-horizontal" aria-hidden="true"></i>
        <span class="sr-only">Logout</span>
    </a>
</div>

<div class="c-sidebar__channels">
    <p><strong>My Channels</strong></p>
    <ul class="list-unstyled">
        {% for channel in myChannels %}
            <li>
                <small><a href="{{ path('view_chat', { id: channel.id }) }}">{{ channel.name }}</a></small>
            </li>
        {% else %}
            <li>
                <small><em>No channels joined</em></small>
            </li>
        {% endfor %}
    </ul>

    <p><strong>Direct Messages</strong></p>
    <ul class="list-unstyled">
        {% for channel in myChannels %}
            <li>
                <small><a href="{{ path('view_chat', { id: channel.id }) }}">{{ channel.name }}</a></small>
            </li>
        {% else %}
            <li>
                <small><em>You have no DMs</em></small>
            </li>
        {% endfor %}
    </ul>
</div>
