{% extends ':layouts:user-sidebar.html.twig' %}

{% block layout_body %}
    <section>
        <h2>Delete Account</h2>

        <p>If you no longer wish to have an account on ChatLyfe, you may delete your account. This will prevent the following:</p>

        <ul>
            <li>Other users sending you other messages</li>
            <li>@-mentioning you will be disabled</li>
            <li>You will no longer be able to login</li>
        </ul>

        <div class="alert alert-warning" role="alert">
            <strong>Warning:</strong>
            Deleting your account will <strong>not</strong> erase the messages you have sent.
        </div>

        {{ form_start(delete_account) }}
            <div class="d-flex">
                {{ form_row(delete_account.cancel, { attr: { class: 'btn btn-secondary mr-3' } }) }}
                {{ form_row(delete_account.submit, { attr: { class: 'btn btn-danger' }}) }}
            </div>
            {{ form_rest(delete_account) }}
        {{ form_end(delete_account) }}
    </section>
{% endblock %}
