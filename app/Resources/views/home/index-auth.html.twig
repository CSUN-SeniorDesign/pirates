{% extends ':layouts:user-sidebar.html.twig' %}

{% block title %}
    ChatLyfe - Enjoy your chat with everyone
{% endblock %}

{% block layout_body %}
    <div class="border-bottom pb-2 mb-3 text-right">
        <a href="{{ path('create_chat') }}" class="btn btn-primary">Create Channel</a>
    </div>
    <div>
        {% for channel in allChannels %}
            <article class="border-bottom">
                <a href="{{ path('view_chat', { id: channel.id }) }}"
                   class="mb-3 py-3 d-block"
                >
                    <p class="m-0"><strong>#{{ channel.name | lower}}</strong></p>
                    <p class="m-0">{{ channel.topic }}</p>
                </a>
            </article>
        {% endfor %}
    </div>
{% endblock %}
