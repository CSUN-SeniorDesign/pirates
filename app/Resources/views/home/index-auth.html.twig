{% extends 'base.html.twig' %}

{% block title %}
    ChatLyfe - Enjoy your chat with everyone
{% endblock %}

{% block body %}
    <div class="container-fluid py-2">
        <div class="row content">
            <aside class="col-sm-3 hidden-xs">
                {% include '::navbar.html.twig' with { myChannels: myChannels } %}
            </aside>

            <div class="col-sm-9">
                <div class="row">
                    {% for channel in allChannels %}
                        <div class="col-sm-3">
                            <a href="#"
                               class="btn btn-primary--chatlyfe text-center py-3 d-block"
                            >
                                <p class="m-0"><strong>{{ channel.name }}</strong></p>
                                <span>{{ channel.memberCount }}</span>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
